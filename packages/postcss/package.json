{
  "name": "@pastweb/postcss-tools",
  "version": "1.0.2",
  "description": "CSS tool set, modules, scoped CSS variables, utilities and nesting selectors",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "build": "rimraf dist && rimraf doc && rollup --bundleConfigAsCjs --config rollup.config.ts --configPlugin typescript",
    "dev": "rollup --config --bundleConfigAsCjs rollup.config.ts --configPlugin typescript -w",
    "test": "node ../../node_modules/jest/bin/jest.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastweb/css-tools.git"
  },
  "keywords": [
    "cssmodules",
    "modules",
    "postcss",
    "utility",
    "utilities"
  ],
  "author": "Domenico Pasto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pastweb/css-tools/issues"
  },
  "homepage": "https://github.com/pastweb/css-tools#readme",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@rollup/pluginutils": "^5.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "ts-jest": "^29.1.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  }
}
